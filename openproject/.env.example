REDIS_PASSWORD=

# Database Security
POSTGRES_USER=openproject_prod
POSTGRES_DB=openproject_production
POSTGRES_MAX_CONNECTIONS=150
POSTGRES_SHARED_BUFFERS=512MB
POSTGRES_EFFECTIVE_CACHE_SIZE=2GB

